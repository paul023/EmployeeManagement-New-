@model EmployeeManagement.Models.Role

@{
    ViewData["Title"] = "Role Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Role Details</h5>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">Role Name</dt>
                        <dd class="col-sm-9 fw-bold">@Model.RoleName</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light text-start">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-warning me-3">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
