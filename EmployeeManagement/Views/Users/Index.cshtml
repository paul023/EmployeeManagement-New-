@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "System Users";
}

<!-- Create New Employee Button -->
<<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Add New Users
    </a>
</p>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">User List</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                      @*   <th>User Serial No.</th> *@
                        <th>FullName</th>
                        <th>National ID</th>
                        <th>Roles</th>
                        <th>User Email</th>
                      @*   <th>User Name</th> *@
                        <th>User PhoneNo</th>
                      
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           @*  <td>@Html.DisplayFor(modelItem => item.Id)</td> *@
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.NationalId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Role.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.NormalizedEmail)</td>
                          @*   <td>@Html.DisplayFor(modelItem => item.NormalizedUserName)</td> *@
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                          
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu">
                                        <button class="btn btn-sm btn-warning w-100 mb-1" onclick="window.location.href='@Url.Action("Edit", new { id = item.Id })'">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-info w-100 mb-1" onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'">
                                            <i class="fas fa-info-circle"></i> View
                                        </button>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                            <button type="submit" class="btn btn-sm btn-danger w-100 mb-1" onclick="return confirm('Are you sure you want to delete this record?');">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                      
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
