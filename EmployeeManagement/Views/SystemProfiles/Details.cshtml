@model EmployeeManagement.Models.SystemProfile

@{
    ViewData["Title"] = "SystemProfile Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">SystemProfile Details</h5>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-3">
                        <dt class="col-sm-3 text-muted">Name</dt>
                        <dd class="col-sm-9 fw-bold">@Model.Name</dd>

                        <dt class="col-sm-3 text-muted">Profile</dt>
                        <dd class="col-sm-9 fw-bold">@Model.ProfileId</dd>

                        <dt class="col-sm-3 text-muted">Order</dt>
                        <dd class="col-sm-9 fw-bold">@Model.Order</dd>

                        <dt class="col-sm-3 text-muted">Created By</dt>
                        <dd class="col-sm-9 fw-bold">@Model.CreateById</dd>

                        <dt class="col-sm-3 text-muted">Created On</dt>
                        <dd class="col-sm-9 fw-bold">@Model.CreatedOn</dd>

                        <dt class="col-sm-3 text-muted">Modified By</dt>
                        <dd class="col-sm-9 fw-bold">@Model.ModifiedById</dd>

                        <dt class="col-sm-3 text-muted">Modified On</dt>
                        <dd class="col-sm-9 fw-bold">@Model.ModifiedOn</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light text-start">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-warning me-3">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
