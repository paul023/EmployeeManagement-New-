@model EmployeeManagement.Models.SystemProfile

@{
    ViewData["Title"] = "Create System Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- First Row -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter profile name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ProfileId" class="control-label">Select Profile</label>
                                <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId">
                                    <option value="">-- Please select --</option>
                                </select>
                                <span asp-validation-for="ProfileId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Second Row -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order" class="form-label"></label>
                                <input asp-for="Order" type="number" class="form-control" placeholder="Enter display order" />
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="bg-light text-start mt-3 p-2 rounded">
                            <button type="submit" class="btn btn-sm btn-success me-2">
                                <i class="bi bi-save"></i> Save Profile
                            </button>
                            <a asp-action="Index" class="btn btn-sm btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
