@model EmployeeManagement.Models.LeaveType

@{
    ViewData["Title"] = "Update Leave Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Update Leave Type</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="code" class="form-label"></label>
                            <input asp-for="code" class="form-control" />
                            <span asp-validation-for="code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="name" class="form-label"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="bg-light text-start mt-3">
                            <a asp-action="Index" class="btn btn-sm btn-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-save"></i> Save Leave Type
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
